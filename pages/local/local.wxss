/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* ------------ */

.menu-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  padding: 10rpx 40rpx;
  background-color: #fff;
}
.menu-title{
  font-size: 32rpx; 
  font-weight: bold; 
  line-height: 60rpx;
}
.switch-btn-wrapper {
  width: 240rpx;
  height: 60rpx;
  background-color: grey;
  color: white;
  text-align: center;
  border-radius: 25px ;
}
.switch-btn-wrapper label {
  display: inline-flex;
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  vertical-align: middle;
  justify-content:center;
  border-radius: 25px
}
.cur-menu{
  background-color: #00b26a;
  color: #fff;
}

.item-photo{
  height: 300px;
  width: 450px;

}