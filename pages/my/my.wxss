page {
  background-color: white;
}
.user_info_wrap {
  height: 65vh;
  overflow: hidden;
  background-color: var(white);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 65vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 35%;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50% ;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 100rpx;
  color: rgb(17, 16, 16);
}
/* ============ */
.my-items {
  flex: 3;
  width: 100%;
  padding: 20rpx;
  flex-direction: column;
}

.item-wrapper {
  width: 100%;
  height: 80rpx;
  padding: 20rpx 20rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-between;
}
.item-wrapper i {
  vertical-align: middle;
  margin-right: 26rpx;
}
