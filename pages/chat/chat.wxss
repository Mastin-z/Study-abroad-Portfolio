/* pages/chat/chat.wxss */
.chat{
  display: flex;
  border-bottom: 1rpx solid #b3b3b3;
}

.avatar{
  height: 96rpx;
  width: 96rpx;
  margin: 16rpx;
  border-radius: 8rpx;
}

.info{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 12rpx;
}

.username{
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  margin-top: 20rpx;
}

.message{
  font-size: 24rpx;
  color: #999999;
}

.date{
  color: #000000;
  width: auto;
  margin-top: 20rpx;
  margin-right: 28rpx;
  font-size: 22rpx;
}